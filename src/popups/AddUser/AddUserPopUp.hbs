{{# if visible }}
    <div class="popup-wrapper" id="addUserPopUpWrapperId">
        <div class="popup-content popup-content_invite">
            <div class="popup-form">
                <div class="popup-form__header">
                    {{header}}
                </div>
                <div class="horizontal-line"></div>
                <div class="popup-form__elements-wrapper">
                    <div>
                        <input class="simple-form-element" type="text" id="addUserPopUpSearchInputId"
                               name="search-input" {{# if searchString}}value="{{searchString}}"{{/if}}
                               placeholder="Введите имя пользователя..."
                               pattern="^[a-zA-Z\d]{1,40}$" autocomplete="off" required>
                    </div>
                    {{#if errors}}
                        <div class="error">{{errors}}</div>
                    {{/if}}
                    <div class="search-result-wrapper custom-scroll">
                        {{#each users}}
                            <div class="search-result" data-uid="{{this.uid}}">
                                <img class="avatar" src="{{this.avatar}}"/>
                                <div class="user-name">{{this.userName}}</div>
                                <div class="{{#if this.added}}check check_padded{{else}}add add_padded{{/if}}"></div>
                            </div>
                        {{/each}}
                    </div>
                    {{#if inviteLink}}
                    <div class="invite-link-wrapper">
                        <div class="invite-link__label">Ссылка-приглашение:</div>
                        <div class="invite-link">
                            <input class="simple-form-element invite-link__link" type="text" id="inviteLinkInputId"
                                   value="{{inviteLink}}" autocomplete="off" readonly>
                            <div class="invite-link__copy material-icon-copy" id="copyLinkId"></div>
                            <div class="invite-link__reload material-icon-reload" id="refreshLinkId"></div>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="horizontal-line horizontal-line_aligned"></div>
            </div>
            <div class="close-button" id="addUserPopUpCloseId"></div>
        </div>
    </div>
{{/if}}
